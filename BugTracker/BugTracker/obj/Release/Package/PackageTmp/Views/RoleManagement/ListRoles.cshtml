@using BugTracker.Models;

@model IEnumerable<RoleViewModel>

@{
    ViewBag.Title = "ListRoles";
}
<div class="row" style="padding-top: 15px;">

    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-primary">

            <div class="panel-heading">
                <h2><b>System Roles</b></h2>
            </div>
            <div class="panel-body">
                <div id="topTabs-container-home">
                </div>
                <table class="table" style="margin-left:10px;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RoleName)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                @Html.ActionLink("Assign", "AssignUserRole", new { roleName = item.RoleName }) |
                                @Html.ActionLink("Unassign", "UnassignUserRole", new { roleName = item.RoleName })
                            </td>
                        </tr>
                    }

                </table>
                </div>
            </div>
        </div>
    </div>

